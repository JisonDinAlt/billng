<div class="login">
  <div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
      <div class="form">

      <h1>Sign up</h1>
      	<%= form_for(@user) do |f| %>
           <p><%= f.text_field :first_name, :placeholder => "First name" %></p>
           <p><%= f.text_field :last_name, :placeholder => "Last name" %></p>
           <p><%= f.email_field :email, :placeholder => "Email" %></p>
           <p><%= f.password_field :password, :placeholder => "Password" %></p>
           <p><%= f.submit "Create an account", class: "btn-submit" %></p>
      	<% end %>
  </div>
  </div>
</div>
  </div>
