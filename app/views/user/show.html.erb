              <p><%= form.label :amount_date %><br><%= form.text_field :amount_date, data:{ provide:'datepicker' }, :placeholder => "Date of pay", :class => "form-control mb-2" %></p>
              <p><%= form.label :description %><br><%= form.text_area :description, :placeholder => "Description", :class => "form-control mb-2" %></p>
              <p><%= form.submit 'Add Pay', :name => 'Add' %></p>
            <% end %>
          </div>
        </div>
      </div>
