<div class="container-fluid h-100">
	<div class="row h-100 justify-content-center align-items-center ">
		<div class="col-auto">
			<p>  <h1>Log in</h1></p>
		</div>
	</div>
  <div class="row h-100 justify-content-center align-items-center">
			<div class="form-row align-items-center">
					<%= form_for(:session, url: login_path) do |f| %>
						<div class="col-auto">
							<p><%= f.email_field :email, :placeholder => "Email", :class => "form-control mb-2" %></p>
						</div>
						<div class="col-auto">
							<p><%= f.password_field :password, :placeholder => "Password", :class => "form-control mb-2" %></p>
						</div>
						<div class="col-auto">
							<%= f.submit "Log in", class: "btn-submit", :class => "form-control mb-2", :class => "btn btn-large btn-primary" %>
						</div>
					<% end %>
			</div>
	</div>
</div>
